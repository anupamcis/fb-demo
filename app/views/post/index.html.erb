<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<div class="container mt-3 mb-3">
	<div class="col-lg-6 offset-lg-3 ">
		<h1> All Posts</h1>
	</div>
</div>
 <% flash.each do |type,msg| %>
    <div class="alert alert-success">
      <%=msg %>
    </div>
    <% end %>
<%@posts.each do |post|  %>

	<section class="hero">
    	<div class="container mb-3">
        	<div class="row">	
		   		<div class="col-lg-6 offset-lg-3"> 
					<div class="cardbox shadow-lg bg-white">
			 			<div class="cardbox-heading">
			  				<div class="media m-0">
			   					<div class="d-flex mr-3 m-2">	
									<a style="text-decoration:none;" href="profile/userprofile/<%=post.user.id%>">
									<img class="img-fluid rounded-circle" src="http://www.themashabrand.com/templates/bootsnipp/post/assets/img/users/4.jpg" alt="User" height="70px" width="70px" >
									<span style="font-family:sans-serif;font-size:2em; text-decoration:none;"><i class="icon ion-md-time"></i><%=  post.user.name%></span>
									</a>
							
								</div>
			   					<div class="media-body m-2"> 								   
									<p style="font-family:sans-serif;font-size:1.2em;"><%=post.text%></p>
									<small><span><i class="icon ion-md-pin"></i>Posted at:- <%=post.created_at%></span></small>			
			 	  				</div>
			  				</div>
			 			</div>
			 			<div class="cardbox-item mb-5">
						 <% if post.image_url%>
						 <%= image_tag(post.image.url,height:600, width:600,class:"img-fluid m-3")%>
						 <%else%>
     			        <%end%>
							 <div class="container d-flex ">
							 		<div class="border border-dark m-2">
							    		<h4><a href="like/indexlike/<%=post.id%>"><%=@likecount%><i class="bi bi-hand-thumbs-up m-5"></i> </a></h4>
								 	</div>
									<div class="border border-dark m-2">
										<h4><a href="comment/index/<%=post.id%> "><i href="comment/index/<%=post.id%> " class="bi bi-chat-dots m-5"></i></a></h4>
								 	</div>
								 </div>
           					</div>	
							<br>
          				</div>
         			</div>
                </div>
			</div>
		</div>
    </section>
	
<%end%>