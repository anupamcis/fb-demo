<br>
<h2 class="card-title text-center">Total Replies on this comment : <%=@repliescount%></h2>
<%@replies.each do|reply|%>
    <div class="row d-flex justify-content-center mt-100 mb-100">
        <div class="col-lg-6">
            <div class="card">
                <div class="comment-widgets">
                    <div class="d-flex flex-row comment-row m-t-0">
                        <% if User.find(reply.userid).image_url %>
                            <img src="<%=User.find(reply.userid).image_url %>" alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2 round rounded-circle" style="width: 100px; z-index: 1">
                        <%else%>
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp" alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2" style="width: 120px; z-index: 1">
                        <%end%>
                        <div class="comment-text w-100 mb-5 ">
                                <h3 class="font-medium"><%=@users.find(reply.userid).name%> </h3><span class="m-b-15 d-block", style="font-family:sans-serif;font-size:1.8em;"" ><%=reply.text%></small>
                                <div class="comment-footer"> <span class="text-muted float-right"><%=reply.created_at%></span> <br>     
                                    <% if reply.userid == current_user.id %>             
                                        <button type="button" class="btn btn-cyan btn-sm"><a href="/reply/new/<%=reply.id%>">Repy</a></button>
                                        <button type="button" class="btn btn-cyan btn-sm"><a href="/replies/<%=reply.id%>">Replies</a></button>         
                                        <%=link_to 'Delete',comment_path(reply.id), method: "delete",data:{confirm: "Are you sure ?"},class:"btn btn-primary"%>
                                    <%end%>
                                </div>
                            </div>
                        </div>               
                    </div> 
                </div>
            </div>
        </div>
    </div>
<%end%>
