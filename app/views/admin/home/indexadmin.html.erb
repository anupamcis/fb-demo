<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

<h1 style="text-align:center;">All Posts of users</h1>
<%@posts.each do |post|  %>
	<section class="hero">
    	<div class="container mb-3">
        	<div class="row">	
		   		<div class="col-lg-6 offset-lg-3">
					<div class="cardbox shadow-lg bg-white">
			 			<div class="cardbox-heading">
			  				<div class="media m-0">
			   					<div class="d-flex mr-3 m-2">
									<a href="#">
										<% if User.find(post.user_id).image_url%>
											<img src="<%=User.find(post.user_id).image_url%>" alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2" style="width: 150px; z-index: 1">
										<%else%>
											<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp" alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2" style="width: 150px; z-index: 1">
										<%end%>	  							
												<span style="font-family:sans-serif;font-size:1.5em;"><i class="icon ion-md-time"></i> <%=  post.user.name%></span></a>
					                <div class="d-flex  m-5">
										<%= link_to 'Delete Post' ,admin_home_path(post.id),method: :delete,class:"btn btn-danger pull-right mb-5",role:"button" %>
									</div>
								</div>
			   					<div class="media-body m-2">    
									<p style="font-family:sans-serif;font-size:1.2em;"><large><%=post.text%></large></p>
									<small><span><i class="icon ion-md-pin"></i>Posted at:- <%=post.created_at%></span></small>			
			 	  				</div>
			  				</div>
			 			</div>
			 			<div class="cardbox-item mb-5">
						 	<% if post.image_url%>
								<%= image_tag(post.image.url,height:600, width:600,class:"img-fluid m-3")%>
						 	<%else%>
     			        	<%end%>  
						</div>	
							<br>
          				</div>
         			</div>
                </div>
			</div>
		</div>
    </section>
<%end%>
