<h3 class="card-title text-center mt-3 mb-1">Total number of comments on this post : <%=@commentcount%></h3><br>

<h2 class="card-title text-center">All Comments</h2>
<%@postcomments.each do|postcomment|%>
    <%if postcomment.coment_id==nil%>
        <div class="comment-thread">
            <details open class="comment" id="comment-1">
                <a href="#comment-1" class="comment-border-link">
                    <span class="sr-only">Jump to comment-1</span>
                </a>
                <summary>
                    <div class="comment-heading">
                        <div class="comment-voting">
                            <button type="button">
                                <span aria-hidden="true">&#9650;</span>
                                <span class="sr-only">Vote up</span>
                            </button>
                            <button type="button">
                                <span aria-hidden="true">&#9660;</span>
                                <span class="sr-only">Vote down</span>
                            </button>
                        </div>
                        <% if User.find(postcomment.userid).image_url %>
                            <img src="<%=User.find(postcomment.userid).image_url %>" alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2 " style="width: 40px; z-index: 1">
                        <%else%>
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp" alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2" style="width: 40px; z-index: 1">
                        <%end%>
                        <div class="comment-info">
                            <a href="#" class="comment-author"><%=User.find(postcomment.userid).name%></a>
                            <p class="m-0">
                                <%=postcomment.created_at%>
                            </p>
                        </div>
                    </div>
                </summary>
                <div class="comment-body mt-2">
                <div class="m-b-15 d-block font-medium", style="font-family:sans-serif;font-size:1.8em;">
                    <h5>
                    <%=postcomment.text%>
                    </h5>
                    </div>
                        <button type="button" class="btn btn-cyan btn-sm"><a href="/reply/new/<%=postcomment.id%>">Reply</a></button><br>
                        <% if postcomment.userid == current_user.id %>
                            <%=link_to 'Edit', edit_comment_path(postcomment.id),class:"btn btn-success"%>
                            <%=link_to 'Delete',comment_path(postcomment.id), method: "delete",data:{confirm: "Are you sure ?"},class:"btn btn-danger"%></td>
                        <%end%>
                    <form method="POST" class="reply-form d-none" id="comment-1-reply-form">
                        <textarea placeholder="Reply to comment" rows="4"></textarea>
                        <button type="submit">Submit</button>
                        <button type="button" data-toggle="reply-form" data-target="comment-1-reply-form">Cancel</button>
                    </form>
                </div>

                <%@replies.each do|reply|%>
                    <% if reply.coment_id == postcomment.id%>
                        <div class="replies">
                            <details open class="comment" id="comment-2">
                                <a href="#comment-2" class="comment-border-link">
                                    <span class="sr-only">Jump to comment-2</span>
                                </a>
                                <summary>
                                <% if User.find(reply.userid).image_url %>
                                    <img src="<%=User.find(reply.userid).image_url %>" alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2" style="width: 40px; z-index: 1">
                                <%else%>
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp" alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2" style="width: 40px; z-index: 1">
                                <%end%>
                                    <div class="comment-heading">                                
                                        <div class="comment-info">
                                            <a href="#" class="comment-author"><%=User.find(reply.userid).name%></a>
                                            <p class="m-0">
                                            <%=reply.created_at%>
                                            </p>
                                        </div>
                                    </div>
                                </summary>
                                <div class="comment-body">
                                    <h6>
                                        <%=reply.text%>                   
                                    </h6>
                                        <button type="button" class="btn btn-cyan btn-sm"><a href="/reply/new/<%=reply.id%>">Reply</a></button>
                                        <button type="button" class="btn btn-cyan btn-sm"><a href="/replies/<%=reply.id%>">Replies</a></button><br>
                                        <% if reply.userid == current_user.id %>
                                            <%=link_to 'Edit', edit_comment_path(reply.id),class:"btn btn-success"%>
                                            <%=link_to 'Delete',comment_path(reply.id), method: "delete",data:{confirm: "Are you sure ?"},class:"btn btn-danger"%></td>
                                        <%end%>
                                    <form method="POST" class="reply-form d-none" id="comment-2-reply-form">
                                        <textarea placeholder="Reply to comment" rows="4"></textarea>
                                        <button type="submit">Submit</button>
                                        <button type="button" data-toggle="reply-form" data-target="comment-2-reply-form">Cancel</button>
                                    </form>
                                </div>
                            </details>
                        </div>
                    <%end%>
                <%end%>
            </details>
        </div>
    <%end%>
<%end%>

<div style="justify-content: center; display: flex;">
  <div class="col-md-8 col-lg-6" style="padding-bottom: 50px; width: 37%;">
    <div class="card shadow-0 border" style="background-color: #f0f2f5;">
      <div class="card-body p-4">
        <div class="form-outline mb-4">
            <p> Type Message</p>
            <%= form_with(url: "/comment", method: :comments) do |form| %>
                <%= form.text_field :title %>
                <%= form.submit %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>