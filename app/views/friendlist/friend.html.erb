<h2 style="border-radius: 20px; margin: 30px; background-color: black; padding: 20px; text-align: center; color: white;"> Friends </h2>
<%@friendlist.each do|pending|%>
	<%if pending.current_user_id == current_user.id%>
		<%if pending.friendship_status != "f" %> 
			<div class="row" style="justify-content: center;">
				<div class="col-md-8">
					<div class="people-nearby">   
						<div class="nearby-user">
						<div class="row" style="align-items: center;">
							<div class="col-md-2 col-sm-2">
							<a style="text-decoration:none;" href="profile/userprofile/<%=pending.friends_id%>">
								<% if User.find(pending.friends_id).image_url%>
									<img src="<%=User.find(pending.friends_id).image.url%>" alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2 round rounded-circle" style="width: 100px; z-index: 1">
								<%else%>
									<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp" alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2 round rounded-circle" style="width: 100px; z-index: 1">  
								<%end%>	 
							</a>	                    
							</div>
							<div class="col-md-7 col-sm-7">
								<h5><a href="profile/user_profile/<%=pending.friends_id%>" class="profile-link" style="text-decoration:none; color:black;" ><%=User.find(pending.friends_id).name%></a></h5>
								<p><%=User.find(pending.friends_id).location%></p>
							</div>
							<div class="col-md-3 col-sm-3 ">
							<%=button_to 'Remove Friend', friendlist_path(pending.id, type: "already"),class:"btn btn-danger pull-right mb-2",method: :delete%>	
							</div>
						</div>
						</div>
					</div>
				</div>
			</div>
		<%end%>
	<%end%>	
<%end%>